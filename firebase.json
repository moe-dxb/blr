{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "apphosting": {
    "backendId": "blr-world-hub-backend",
    "rootDir": "/",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "runtime": "nodejs18"
    }
  ],
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9199
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8180,
      "rules": "firestore.rules"
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 5101
    },
    "ui": {
      "host": "127.0.0.1",
      "port": 4100
    },
    "apphosting": {
      "host": "127.0.0.1",
      "port": 9104
    },
    "singleProjectMode": true
  }
}
