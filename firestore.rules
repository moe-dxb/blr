rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and update their own profile, but cannot create or delete it.
    // List operations are disallowed to prevent users from querying all other users.
    match /users/{userId} {
      allow get, update: if request.auth != null && request.auth.uid == userId;
      allow create, delete, list: if false;
    }
  }
}
