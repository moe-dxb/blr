{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017"
    ],
    "types": [
      "node",
      "firebase-functions"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}