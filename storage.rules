rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'profile-pictures' directory
    match /profile-pictures/{userId}/{fileName} {
      // Allow a user to read their own profile picture
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow a user to upload their own profile picture
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // You can add more rules for other directories (e.g., expense-receipts) here
  }
}
